NAME = gnl

###############################################################################
#									SRCS									  #
###############################################################################

SRCS =	main.c

###############################################################################
#									OBJS									  #
###############################################################################

OBJS_DIR =	objs/
OBJ_FILES =	$(SRCS:.c=.o)
OBJS = $(addprefix $(OBJS_DIR), $(OBJ_FILES))

###############################################################################
#									OTHER									  #
###############################################################################

CC = gcc
CFLAGS = -Wall -Wextra -Werror
RM = rm -f
AR = ar rc

###############################################################################
#									RULES									  #
###############################################################################

all: 		$(NAME)

m_gnl:
			@make -C get_next_line/

$(NAME):	m_gnl $(OBJS_DIR) $(OBJS)
			$(CC) -I get_next_line.h $(OBJS) -Llibft -lft -o $@

$(OBJS_DIR):		
						@mkdir $(OBJS_DIR)

%.o: %.c
			$(CC) $(CFLAGS) -I get_next_line.h -c $< -o $@

clean: 		
			@$(RM) $(OBJS)

fclean: 	clean
			@$(RM) $(NAME)

re:			fclean all

.PHONY: all clean fclean re
